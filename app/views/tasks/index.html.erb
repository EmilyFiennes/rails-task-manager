<h1>Your personal task manager <%= "🐙" * @tasks.count_done %></h1>

<ol>
<% @tasks.each do |task| %>
  <li> 📌 <%= task.name %>
    <% if task.done == true %>
      <span>Good job! 💪🏽 "Changed your mind? You can <%= link_to "edit", edit_task_path(task) %>here</span>
    <% else %>
      <strong>(<%= (task.urgency)%>)</strong> </li>
      <ul>
        <li><%=link_to "Show this task", task_path(task) %></li>
        <li><%=link_to "Edit this task", edit_task_path(task) %></li>
        <li><%=link_to "Delete this task", delete_task_path(task), method: :delete %>
      </li>
    <% end %>
    </ul>
<% end %>
</ol>


<p> ✏️ <button><%= link_to "Add a new task to your task list", new_task_path %></button></p>
